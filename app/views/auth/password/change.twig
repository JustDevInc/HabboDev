{% extends 'templates/default.twig' %}

{% block title %}{{ lang.change_password }}{% endblock %}

{% block content %}
<form class="form-class" action="{{ urlFor('password.change.post') }}" method="POST" autocomplete="off">
    <h2 class="form-class-heading">{{ lang.change_password }}</h2>

    <div class="form-group">
        <input  type="password" class="form-control" name="password_old" placeholder="{{ lang.current_password }}" id="password_old">
        {% if errors.has('password_old') %}{{ errors.first('password_old')}} {% endif %}
    </div>

    <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="{{ lang.new_password }}" id="password">
        {% if errors.has('password') %}{{ errors.first('password')}} {% endif %}
    </div>

    <div class="form-group">
        <input type="password" class="form-control" name="password_confirm" placeholder="{{ lang.confirm_new_password }}" id="password_confirm" >
        {% if errors.has('password_confirm') %}{{ errors.first('password_confirm')}} {% endif %}
    </div>

    <button type="submit" class="btn btn-lg btn-primary btn-block">{{ lang.change_password }}</button>

    <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">

</form>
{% endblock %}