{% extends 'templates/default.twig' %}

{% block title %}{{ lang.login }}{% endblock %}

{% block content %}
    <div class="container">
    <form action="{{ urlFor('login.post') }}" method="post" autocomplete="off">
        <h2>{{ lang.login }}</h2>
             <div class="form-group {%  if errors.has('identifier')  %} has has-error{%  endif  %}">
                 <input type="text" class="form-control" placeholder="{{ lang.email }}/{{ lang.username }}" name="identifier" {% if request.post('identifier') %} value="{{ request.post('identifier') }}" {% endif %}id="identifier">
                 {% if errors.has('identifier') %}{{ errors.first('identifier') }} {% endif %}
             </div>

            <div class="form-group {%  if errors.has('password')  %} has has-error{%  endif  %}">
                <input type="password" class="form-control" placeholder="{{ lang.password }}" name="password" id="password">
                     {% if errorsa.has('password') %}{{ errors.first('password') }} {% endif %}
            </div>

            <div class="form-group">
                <div class="">
                     <label>
                         <input type="checkbox" class="form-control" name="remember"
                                id="remember">{{ lang.remember_me }}
                     </label>

                     <a href="">{{ lang.forgot_password }}</a>
                 </div>
             </div>
             <div class="form-group">
                <button type="submit"  class="btn btn-lg btn-primary btn-block" value="Login">{{ lang.sign_in }}</button>
            </div>
         <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
     </form>
</div>
{% endblock %}