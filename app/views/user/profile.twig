{% extends 'templates/default.twig' %}

{% block title %}{{ user.getFullNameOrUsername }}{% endblock %}

{% block content %}
    <h2>{{ user.username }}</h2>
    <img src="{{ user.getAvatarUrl({size: 30}) }}" alt="Profile Picture For {{ user.getFullNameOrUsername }}">
    <dl>
        <dt>Email</dt>
        <dd>{{ user.email }}</dd>
    </dl>
{% endblock %}